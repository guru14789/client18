rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Core Auth Helper
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if user matches the path
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- User Specific Uploads ---
    // Matches: users/{userId}/uploads/profiles/pic.jpg
    match /users/{userId}/uploads/{allPaths=**} {
      allow read: if isSignedIn(); // Allow others to see your avatar/content
      allow write: if isOwner(userId); // Only you can upload to your folder
    }

    // --- Fallback/Global (Debug Only - Optional) ---
    // If your app is somehow uploading to root, this would catch it.
    // Ideally, keep this strict or remove it for production.
    match /{allPaths=**} {
      allow read, write: if false; 
    }
  }
}
