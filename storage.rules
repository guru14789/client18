rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper to check ownership based on path
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Profile Pictures: Owner can write, any logged-in user can see (for family display)
      match /profile/{allPaths=**} {
        allow write: if isOwner(userId);
        allow read: if isSignedIn();
      }

      // Videos: Restricted write to owner. 
      // Read is allowed for any signed-in user. 
      // Security is managed at the Firestore layer where video IDs are discovered.
      match /videos/{memoryId} {
        allow write: if isOwner(userId);
        allow read: if isSignedIn();
      }

      // Thumbnails: Same as videos
      match /thumbnails/{memoryId} {
        allow write: if isOwner(userId);
        allow read: if isSignedIn();
      }

      // Documents: Strictly private to the owner
      match /documents/{docId} {
        allow write, read: if isOwner(userId);
      }
    }
  }
}
