rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper to check if user matches the requested userId
    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper to check if the current user is a member of the family
    // This requires a 'get' call, which counts against quota but ensures security.
    function isFamilyMember(familyId) {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/families/$(familyId)) &&
        request.auth.uid in get(/databases/$(database)/documents/families/$(familyId)).data.members;
    }

    // User profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isUser(userId);
    }

    // Family circles
    match /families/{familyId} {
      allow create: if isSignedIn();
      // Only members can read or update their family data
      allow read, update: if isSignedIn() && (request.auth.uid in resource.data.members);
      // Only admins or the creators should theoretically delete, but for now allow admins if field exists
      allow delete: if isSignedIn() && (request.auth.uid in resource.data.members);
    }

    // Memories (Scoped by familyId field)
    match /memories/{memoryId} {
      // Read/Write allowed only if the user is a member of the family referenced in the memory
      allow read: if isSignedIn() && isFamilyMember(resource.data.familyId);
      allow create: if isSignedIn() && isFamilyMember(request.resource.data.familyId);
      allow update: if isSignedIn() && isFamilyMember(resource.data.familyId); // Can add author check if needed
      allow delete: if isSignedIn() && isFamilyMember(resource.data.familyId);
    }

    // Questions/Prompts
    match /questions/{questionId} {
      allow read: if isSignedIn() && isFamilyMember(resource.data.familyId);
      allow create: if isSignedIn() && isFamilyMember(request.resource.data.familyId);
      allow update, delete: if isSignedIn() && isFamilyMember(resource.data.familyId);
    }

    // Documents/Vault Items
    match /documents/{docId} {
      allow read: if isSignedIn() && isFamilyMember(resource.data.familyId);
      allow create: if isSignedIn() && isFamilyMember(request.resource.data.familyId);
      allow update, delete: if isSignedIn() && isFamilyMember(resource.data.familyId);
    }
    
    // Notifications (Optimistic specific user match)
    match /notifications/{notificationId} {
       allow read, write: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
  }
}
