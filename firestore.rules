rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getFamily(familyId) {
      return get(/databases/$(database)/documents/families/$(familyId)).data;
    }
    
    function isFamilyMember(familyId) {
      return isSignedIn() && (request.auth.uid in getFamily(familyId).members);
    }

    function isFamilyMemberFromData(data) {
      return isSignedIn() && (request.auth.uid in data.members);
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // --- Families Collection ---
    match /families/{familyId} {
      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
      allow read, update: if isSignedIn() && (request.auth.uid in resource.data.members);
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // --- Memories Collection ---
    match /memories/{memoryId} {
      // Read: Published to family OR is the author's draft
      allow read: if isSignedIn() && (
        (resource.data.status == 'published' && exists(/databases/$(database)/documents/families/$(resource.data.familyIds[0])) && isFamilyMember(resource.data.familyIds[0])) ||
        (resource.data.authorId == request.auth.uid)
      );
      
      // Create: Must be the author
      allow create: if isSignedIn() && 
                    request.resource.data.authorId == request.auth.uid &&
                    request.resource.data.status in ['draft', 'published'];
                    
      // Update: Author can update anything, Family members can only update 'likes' and 'comments'
      allow update: if isSignedIn() && (
        (resource.data.authorId == request.auth.uid) ||
        (resource.data.status == 'published' && isFamilyMember(resource.data.familyIds[0]) && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments']))
      );
      
      allow delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }

    // --- Questions Collection ---
    match /questions/{questionId} {
      allow read: if isSignedIn() && isFamilyMember(resource.data.familyId);
      
      allow create: if isSignedIn() && 
                    isFamilyMember(request.resource.data.familyId) &&
                    request.resource.data.askedBy == request.auth.uid;
                    
      // Anyone in family can upvote
      allow update: if isSignedIn() && 
                    isFamilyMember(resource.data.familyId) &&
                    request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes']);
                    
      allow delete: if isSignedIn() && resource.data.askedBy == request.auth.uid;
    }

    // --- Notifications Collection ---
    match /notifications/{notificationId} {
      // Only the target user can read/write their own notifications
      allow read, update: if isSignedIn() && request.auth.uid == resource.data.userId;
      // System/Other users can create notifications for this user
      allow create: if isSignedIn(); 
    }

    // --- Documents (Legacy/Compatibility) ---
    match /documents/{docId} {
      allow read: if isSignedIn() && isFamilyMember(resource.data.familyId);
      allow create: if isSignedIn() && isFamilyMember(request.resource.data.familyId);
      allow update, delete: if isSignedIn() && isFamilyMember(resource.data.familyId);
    }
  }
}
