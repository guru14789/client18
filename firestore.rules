rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getFamily(familyId) {
      return get(/databases/$(database)/documents/families/$(familyId)).data;
    }
    
    function isFamilyMember(familyId) {
      let family = get(/databases/$(database)/documents/families/$(familyId));
      return isSignedIn() && 
             familyId != null && 
             exists(/databases/$(database)/documents/families/$(familyId)) &&
             request.auth.uid in family.data.members;
    }
    
    function isMemberOfAny(familyIds) {
      return isSignedIn() && 
             familyIds != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('familyIds', []).hasAny(familyIds);
    }

    // --- Users Collection & Sub-collections ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || (
        isSignedIn() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['familyIds', 'defaultFamilyId', 'updatedAt']) &&
        request.resource.data.defaultFamilyId != null &&
        exists(/databases/$(database)/documents/families/$(request.resource.data.defaultFamilyId)) &&
        request.auth.uid in get(/databases/$(database)/documents/families/$(request.resource.data.defaultFamilyId)).data.get('admins', [])
      );
      allow delete: if isOwner(userId);

      // Sub-collection: Memories (Answers)
      match /memories/{memoryId} {
        allow read: if isSignedIn() && (
          isOwner(userId) ||
          (resource.data.status == 'published' && (
            // Check first family if singular check or iterate if possible
            // In sub-collection, we usually expect membership in at least one
            isMemberOfAny(resource.data.familyIds)
          ))
        );
        allow create: if isOwner(userId); 
        allow update: if isSignedIn() && (
          isOwner(userId) ||
          (resource.data.status == 'published' && isMemberOfAny(resource.data.familyIds) && 
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments']))
        );
        allow delete: if isOwner(userId);
      }

      // Sub-collection: Questions Asked by this User
      match /questions/{questionId} {
        allow read: if isSignedIn() && (isOwner(userId) || isFamilyMember(resource.data.familyId));
        allow create: if isOwner(userId);
        allow update: if isSignedIn() && (
          isOwner(userId) ||
          (isFamilyMember(resource.data.familyId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes']))
        );
        allow delete: if isOwner(userId);
      }

      // Sub-collection: Documents
      match /documents/{docId} {
        allow read: if isSignedIn() && (isOwner(userId) || isFamilyMember(resource.data.familyId));
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }
    }

    // --- Families Collection ---
    match /families/{familyId} {
      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
      allow read: if isSignedIn();
      allow update: if isSignedIn() && (
        (request.auth.uid in resource.data.members) ||
        (request.resource.data.inviteCode == resource.data.inviteCode && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'updatedAt']))
      );
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // --- Notifications Collection ---
    match /notifications/{notificationId} {
      allow read, update: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn(); 
    }

    // --- Activity & Invites ---
    match /activity/{id} {
      allow read: if isSignedIn() && isFamilyMember(resource.data.familyId);
      allow create: if isSignedIn();
    }
    
    match /invites/{id} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.invitedBy || 
        (resource.data.phoneNumber != null && request.auth.token.phone_number == resource.data.phoneNumber)
      );
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }

    match /secure_invites/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['usedBy']);
    }

    match /join_requests/{id} {
      allow create: if isSignedIn() && request.resource.data.get('userId', '') == request.auth.uid;
      allow read, update: if isSignedIn() && (
        request.auth.uid == resource.data.get('userId', '') || 
        (exists(/databases/$(database)/documents/families/$(resource.data.get('familyId', 'none'))) && 
         request.auth.uid in get(/databases/$(database)/documents/families/$(resource.data.get('familyId', 'none'))).data.get('admins', []))
      );
    }

    // --- Collection Group Rules ---
    match /{path=**}/memories/{memoryId} {
      allow read: if isSignedIn() && (
        resource.data.get('authorId', '') == request.auth.uid ||
        (resource.data.get('status', '') == 'published' && isMemberOfAny(resource.data.get('familyIds', [])))
      );
    }

    match /{path=**}/questions/{questionId} {
      allow read: if isSignedIn() && (
        isFamilyMember(resource.data.familyId) ||
        resource.data.askedBy == request.auth.uid
      );
    }

    match /{path=**}/documents/{docId} {
      allow read: if isSignedIn() && (
        isFamilyMember(resource.data.familyId) ||
        resource.data.uploaderId == request.auth.uid
      );
    }
  }
}
