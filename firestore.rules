rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // User profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Family circles
    match /families/{familyId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn(); // Add more specific logic for admins if needed
    }

    // Stories/Memories
    match /memories/{memoryId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn(); // Allows likes and comments to be updated
    }

    // Questions/Prompts
    match /questions/{questionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    // Documents/Vault Items
    match /documents/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }
  }
}
