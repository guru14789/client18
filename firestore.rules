rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow all authenticated users to read/write during debugging phase
    // This fixes "Permission Denied" errors preventing data persistence
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
